<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verificação Básica" />

        <Button
            android:id="@+id/btn_advanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Testes Avançados" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Status VPN: Não Verificado"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rede: Não Verificada"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="IP Público: Não Detectado"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_multiple_ips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Consistência IP: Não Verificado"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_dns_leak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Vazamento DNS: Não Verificado"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_web_rtc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="WebRTC: Não Verificado"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_geolocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Geolocalização: Não Verificado"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_timezone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Fuso Horário: Não Verificado"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_vpn_detection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Detecção VPN: Não Verificado"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>